<div class="row gy-12">

    <div class="col-xl-12">
        <h6 class="text-muted">Sucursales  </h6>
        <div class="card text-center mb-4">
            <div class="card-header p-0">
                <div class="nav-align-top">
                    <ul class="nav nav-tabs" role="tablist">
                      
 

                        <li class="nav-item">
                            <a class="nav-link d-flex flex-column gap-1 active border-bottom border-primary text-primary"
                               href="@Url.Action("ListadoEmpresaSucursales", "Sucursales")"
                               role="tab">
                                <i class="tf-icons ri-list-check"></i>
                                <span>Listado</span>
                            </a>
                        </li>


                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="tab-content pb-0">
                    <div class="tab-pane fade show active" id="navs-home-card" role="tabpanel">

                        <h5 class="card-header ">
                            <i class="ri-shield-user-line text-primary fs-4"></i>
                            Actualizar Sucursal
                        </h5>




                        <div class="card-body">
                            @using (Html.BeginForm("Registrar", "Sucursales", FormMethod.Post, new { id = "formSucursal" }))
                            {
                                <div class="row g-4">

                                    @Html.HiddenFor(m => m.centroControl.EmpresaNo)
                                    @Html.HiddenFor(m => m.centroControl.SucursalNo, new { @class = "form-control", placeholder = "SucursalNo", id = "SucursalNo" })

                                    @*   <h6 class="text-start">1. Empresa</h6> *@
