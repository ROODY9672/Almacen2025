@section PageScripts {
    @*  <script src="~/js/form-validation.js"></script> *@
    <script src="~/js/ui-toasts.js"></script>
    <script src="~/js/app-ecommerce-product-add.js"></script>






    <script>
        $(function () {
            $('#btnActualizarSucursal').on('click', function (e) {
                e.preventDefault();

                var $btn = $(this);
                $btn.prop('disabled', true);

                if (!validarCamposSucursal()) {
                    $btn.prop('disabled', false);
                    return;
                }

                var formData = new FormData();
                formData.append('centroControl.SucursalNo', $('#SucursalNo').val()); // Asegúrate que este campo exista

                formData.append('centroControl.NombreSucursal', $('#NombreSucursal').val().trim());
                formData.append('centroControl.Direccion', $('#Direccion').val().trim());
                formData.append('centroControl.Telefono', $('#Telefono').val().trim());
                formData.append('centroControl.Correo', $('#Correo').val().trim());
                formData.append('centroControl.EmpresaNo', $('#EmpresaNo').val());

                if (dropzoneFotoSucursal.files.length > 0) {
                    formData.append('fileInput', dropzoneFotoSucursal.files[0]);
                    console.log("✅ Imagen agregada:", dropzoneFotoSucursal.files[0].name);
                }

                $.ajax({
                    url: '@Url.Action("ActualizarUsuario", "Sucursales")',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        if (data.success) {
                            toastr.success("Sucursal actualizado correctamente");
                            $('#formSucursal')[0].reset();
                            setTimeout(() => location.reload(), 2000);
                        } else {
                            toastr.error(data.error || "Error al registrar");
                            $btn.prop('disabled', false);
                        }
                    },
                    error: function () {
                        toastr.error("Error en el servidor");
                        $btn.prop('disabled', false);
                    }
                });
            });
        });

        function validarCamposSucursal() {
            let errores = false;

            if ($('#NombreSucursal').val().trim() === "") {
                toastr.warning("El nombre comercial es obligatorio","Advertencia");
                errores = true;
            }
            if ($('#Direccion').val().trim() === "") {
                toastr.warning("La dirección es obligatoria","Advertencia");
                errores = true;
            }
            if ($('#Telefono').val().trim() === "") {
                toastr.warning("El teléfono es obligatorio","Advertencia");
                errores = true;
            }

       
            return !errores;
        }
    </script>






    <script>
             Dropzone.autoDiscover = false;

        const previewTemplate = `
        <div class="dz-preview dz-file-preview">
          <div class="dz-details">
            <div class="dz-thumbnail">
              <img data-dz-thumbnail />
              <span class="dz-nopreview">No preview</span>
              <div class="dz-success-mark"></div>
              <div class="dz-error-mark"></div>
              <div class="dz-error-message"><span data-dz-errormessage></span></div>

            </div>
            <div class="dz-filename" data-dz-name></div>
            <div class="dz-size" data-dz-size></div>
          </div>
        </div>
        `;

        const dropzoneFotoSucursal = new Dropzone("#FotoSucursal", {
          previewTemplate: previewTemplate,
          maxFiles: 1,
          maxFilesize: 5,
          acceptedFiles: ".jpg,.jpeg,.png,.gif",
          addRemoveLinks: true,
          autoProcessQueue: false
        });





    </script>




}
