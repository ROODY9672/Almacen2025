                                        <h6 class="text-start">1. Empresa  </h6>
                                        <hr class="mt-0" />
                                    </div>

                                    <div class="col-md-6">
                                        <div class="input-group input-group-merge">
                                            <span class="input-group-text"><i class="ri-bank-line"></i></span>
                                            <div class="form-floating form-floating-outline">
                                                @Html.TextBoxFor(m => m.centroControl.EMPRESA_RazonSocial, new
                                                    {
                                                        @class = "form-control",
                                                        placeholder = "Razón Social",
                                                        @readonly = "readonly"
                                                    })
                                                <label>Razón Social</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="input-group input-group-merge">
                                            <span class="input-group-text"><i class="ri-profile-line"></i></span>
                                            <div class="form-floating form-floating-outline">
                                                @Html.TextBoxFor(m => m.centroControl.EMPRESA_NumRuc, new
                                                    {
                                                        @class = "form-control",
                                                        placeholder = "RUC",
                                                        @readonly = "readonly"
                                                    })
                                                <label>RUC</label>
                                            </div>
                                        </div>
                                    </div>




                                    <div class="col-12">
                                        <h6 class="text-start">2. Sucursal </h6>
                                        <hr class="mt-0" />
                                    </div>


                                    <div class="col-md-6">
                                        <div class="input-group input-group-merge">
                                            <span class="input-group-text"><i class="ri-building-line"></i></span>
                                            <div class="form-floating form-floating-outline">
                                                @Html.TextBoxFor(m => m.centroControl.NombreSucursal, new
                                                    {
                                                        @class = "form-control",
                                                        placeholder = "Nombre Comercial",
                                                        id = "NombreSucursal"
                                                    })
                                                <label for="NombreSucursal">Nombre Comercial</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="input-group input-group-merge">
                                            <span class="input-group-text"><i class="ri-map-pin-line"></i></span>
                                            <div class="form-floating form-floating-outline">
                                                @Html.TextBoxFor(m => m.centroControl.Direccion, new
                                                    {
                                                        @class = "form-control",
                                                        placeholder = "Dirección",
                                                        id = "Direccion"
                                                    })
                                                <label for="Direccion">Dirección</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="input-group input-group-merge">
                                            <span class="input-group-text"><i class="ri-phone-line"></i></span>
                                            <div class="form-floating form-floating-outline">
                                                @Html.TextBoxFor(m => m.centroControl.Telefono, new
                                                    {
