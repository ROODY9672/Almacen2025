@model SIGLA.Business.Dto.Usuariossss.UsuarioLoginDto

<h2>Iniciar Sesión</h2>

<!-- Muestra los errores generales (por ejemplo: campos requeridos) -->
@Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

@using (Html.BeginForm("IniciarSesion", "Login", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Correo)
        @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", @autocomplete = "off" })
        @Html.ValidationMessageFor(m => m.Correo, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Clave)
        @Html.PasswordFor(m => m.Clave, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Clave, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn-morado">Iniciar Sesión</button>

     if (ViewBag.Error != null)
    {
        <p class="text-danger">@ViewBag.Error</p>
    }
}
